<% provide(:title, "アファメーション詳細") %>
<%= render 'shared/header_title' %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @affirmation, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @affirmation.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>アファメーション</th>
                </tr>
                <tr>
                  <td><%= simple_format @affirmation.body %></td>
                </tr>
              </table>
              <% if @affirmation.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_affirmation_path(@affirmation), class: "button is-success" %>
                <%= link_to "削除", affirmation_path(@affirmation), method: :delete, data: {confirm: "削除しますか？"}, class: "button is-success" %>
              <% end %>
            </div>
            <div class="content">
              <time><%= @affirmation.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            By <%= @affirmation.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @affirmation.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@affirmation.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @affirmation.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>