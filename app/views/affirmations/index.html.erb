<% provide(:title, "アファメーション一覧") %>
<%= render 'shared/header_title' %>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @affirmations.each do |affirmation| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to affirmation_path(affirmation) do %>
                  <%= attachment_image_tag affirmation, :image %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= attachment_image_tag affirmation.user, :profile_image, fallback: "no-image.png", class: "profile_image" %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="title"><%=link_to affirmation.user.username, user_path(affirmation.user) %></div>
                </div>
              </div>

              <div class="content">
                <time><%= affirmation.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>